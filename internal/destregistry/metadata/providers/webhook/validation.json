{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["config", "credentials"],
  "properties": {
    "config": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "credentials": {
      "type": "object",
      "properties": {
        "secrets": {
          "type": "string",
          "pattern": "^\\[\\s*\\{[^\\}]*\\}(\\s*,\\s*\\{[^\\}]*\\})*\\s*\\]$"
        }
      }
    }
  }
}
